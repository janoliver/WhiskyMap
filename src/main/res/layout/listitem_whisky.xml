<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:descendantFocusability="blocksDescendants">

    <ImageView
            android:id="@+id/country_image"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/map_scotland"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/country"/>

    <com.jncreations.whiskymap.Views.CustomTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/country_image"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/rating_bar"
            custom:assetFontFamiliy="RobotoCondensed-Light"
            android:textSize="20sp"
            />

    <com.jncreations.whiskymap.Views.CustomTextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_grey"
            android:layout_toRightOf="@+id/country_image"
            android:layout_below="@+id/title"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/rating_bar"
            android:textSize="12sp"/>

    <com.jncreations.whiskymap.Views.CustomTextView
            android:id="@+id/region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_grey"
            android:layout_toRightOf="@+id/country_image"
            android:layout_below="@+id/subtitle"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/rating_bar"
            android:textSize="12sp"/>

    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            style="@style/whiskyRatingBar"
            android:id="@+id/rating_bar"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:isIndicator="true"/>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/notes_icon"
            android:src="@drawable/ic_notes"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rating_bar"
            android:adjustViewBounds="true"
            android:contentDescription="@string/dialog_bar_notes"
            android:layout_margin="5dp"
            android:visibility="gone"/>

    <View
            android:background="@color/separator"
            android:layout_height="1px"
            android:id="@+id/separator"
            android:layout_below="@+id/region"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"/>

</RelativeLayout>